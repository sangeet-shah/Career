@model Career.Web.Models.Career.CareerJobDetailModel
@using System.Web;
@using System.Text.RegularExpressions
@{
    ViewBag.PageTitle = Model.JobTitle;
    ViewBag.Canonical = "careers/";
    ViewData["HeadCustom"] = "<meta property='og:type' content='website' />" +
                            "<meta property='og:title' content='" + Model.JobTitle + "' />" +
                            "<meta property='og:url' content='" + Model.CurrentPageURL + "' />" +
                            "<meta property='og:site_name' content='Furniture Mart USA' />" +
                            "<link rel='canonical' href='" + @Model.baseURL + "/careers/careerdetail/?id=" + @Model.JobId + "' />";

    var applyNowURL = "https://recruitingbypaycor.com/career/SubmitResume.action?clientId=8a7883c6974d4d58019783f945de0e4b&id="+Model.JobId+"&specialization=";
}

<section class="contact summery-page career-details-page">
