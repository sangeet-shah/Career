        <div class="row">
            <div class="col-md-12">
                @if (!Model.IsMobile)
                {
                    <div class="col-md-12 col-centered">
                        <div class="row">
                            <div class="col-xs-12 col-sm-7 col-md-6 col-lg-8">
                                <div class="title">
                                    <h1 class="short">@Model.JobTitle</h1>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-5 col-md-6 col-lg-4 share-applybutton-wrapper">
                                <div class="career-details-share">
                                    <img class="social-share" src="~/images/social-share.svg" alt="social share">
                                    <span>Share</span>
                                    <div class="social-share-icons">
                                        <div class="social-share-wrapper">
                                            <ul>
                                                <li>
