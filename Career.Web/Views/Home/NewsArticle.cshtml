                </div>
                <div class="news-article-name">
                    @foreach (var author in Model.BlogAuthors)
                    {
                        <h3>
                            <a @(!string.IsNullOrEmpty(author.AuthorUrl) ? "href=" + author.AuthorUrl : "")>
                                @author.AuthorFirstName @author.AuthorMiddleName @author.AuthorLastName
                            </a>
                        </h3>
                    }
                    @if (Model.BlogPost.StartDateUtc != null)
                    {
                        <span>@Model.BlogPost.StartDateUtc?.ToString("MMMM dd, yyyy")</span>
                    }
                </div>              
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-8">
                        <div class="news-article-details">
                            @Html.Raw(Model.BlogPost.Body)
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="articles-list-widget">
                            <div class="articles-list-heading">
                                <h3>MORE NEWS</h3>
                            </div>
                            @foreach (var blog in Model.BlogPostList)
                            {
                                <div class="articles-list-item">
                                    <h4>
                                        <a href="/@blog.SeName.Replace("inspiration/","news/")">
                                            @Html.Raw(blog.Title)
                                        </a>
                                    </h4>
                                    <p>@Html.Raw(blog.BodyOverview)</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            @if (Model.BlogAuthors.Any())
            {
                <div class="col-md-12">
                    <div class="news-article-author">
                        <div class="media">
                            @foreach (var author in Model.BlogAuthors)
                            {
                                <div class="media-left">
                                    <a @(!string.IsNullOrEmpty(author.AuthorUrl) ? "href=" + author.AuthorUrl : "")>
                                        <img src="@author.AuthorPictureUrl" alt="author" class="mr-3 rounded-circle">
                                    </a>
                                </div>
                                <div class="media-body">
                                    <h4><a @(!string.IsNullOrEmpty(author.AuthorUrl) ? "href=" + author.AuthorUrl : "")>@author.AuthorFirstName @author.AuthorMiddleName @author.AuthorLastName</a></h4>
                                    <p>
                                        <a @(!string.IsNullOrEmpty(author.AuthorUrl) ? "href=" + author.AuthorUrl : "")>
                                            @author.AuthorPosition
                                        </a>
                                        <br />Furniture Mart USA
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    //Google Analytics
    $(".fb-share").click(function (e) {
        CallGtagEventShare("share", "facebook", "article", '@Model.BlogPost.SeName');
    });
    $(".twitter-share").click(function (e) {
        CallGtagEventShare("share", "twitter", "article", '@Model.BlogPost.SeName');
    });
    $(".pin-share").click(function (e) {
        CallGtagEventShare("share", "pinterest", "article", '@Model.BlogPost.SeName');
    });
    $(".linkedin-share").click(function (e) {
        CallGtagEventShare("share", "linkedin", "article", '@Model.BlogPost.SeName');
    });
</script>

@{
    if (Model.BlogAuthors.Any())
    {
        int countItem = 0;
        foreach (var author in Model.BlogAuthors)
        {
            countItem++;
            authorArray = authorArray + "{";
            authorArray = authorArray + "\"@type\":" + "\"" + (author.AuthorType ? "Organization" : "Person") + "\",";
            authorArray = authorArray + "\"name\":" + "\"" + author.AuthorFirstName + " " + author.AuthorLastName + "\"" + (!string.IsNullOrEmpty(author.AuthorUrl) ? "," : "");
            if (!string.IsNullOrEmpty(author.AuthorUrl))
            {
                authorArray = authorArray + "\"url\":" + "\"" + author.AuthorUrl + "\"";
            }
            authorArray = authorArray + "}";
            if (countItem != Model.BlogAuthors.Count())
            {
                authorArray = authorArray + ",";
            }
        }
    }
}

<script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "NewsArticle",
      "mainEntityOfPage": {
        "@@type": "WebPage",
        "@@id": "@Model.CurrentPageURL"
      },
      "headline": "@Model.BlogPost.Title.Replace("<br>", "").Replace("<br/>", "").Replace("<br />", "")",
      "image": [
        "@Model.BlogPost.SEOPictureUrl1",
        "@Model.BlogPost.SEOPictureUrl2",
        "@Model.BlogPost.SEOPictureUrl3"
      ],
      "datePublished": "@(Model.BlogPost.StartDateUtc.HasValue ? Model.BlogPost.StartDateUtc.Value.ToString() : string.Empty)",
      "dateModified": "@(Model.BlogPost.UpdatedDateUtc.HasValue ? Model.BlogPost.UpdatedDateUtc.Value.ToString() : string.Empty)",
      "author": [@Html.Raw(authorArray)],
      "publisher": {
        "@@type": "Organization",
        "name": "Furniture Mart USA",
        "logo": {
          "@@type": "ImageObject",
          "url": "@Model.HostURL/images/main-logo.png"
        }
      }
    }
</script>