@model Career.Web.Models.Blogs.ArticleModel

@using System.Web;

@{
    //page title
    ViewBag.PageTitle = !string.IsNullOrEmpty(Model.BlogPost.MetaTitle) ? Model.BlogPost.MetaTitle : Model.BlogPost.Title.Replace("<br>", "").Replace("<br/>", "").Replace("<br />", "");
    var authorArray = string.Empty;
    ViewBag.Canonical = "news/"+ Model.BlogPost.SeName + "/";
}

@section metatags {
    <meta property="og:title" content="@Html.Raw(Model.BlogPost.Title)" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="@Model.CurrentPageURL" />
    <meta property="og:image" content="@Model.BlogPost.BlogBoxPicturePictureURL" />
    <meta property="og:description" content="@Html.Raw(Model.BlogPost.BodyOverview)" />
    <meta property="og:site_name" content="Furniture Mart USA" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@@fmusacorp">
    <meta name="twitter:title" content="@Html.Raw(Model.BlogPost.Title)">
    <meta name="twitter:description" content="@Html.Raw(Model.BlogPost.BodyOverview)">
    <meta name="twitter:url" content="@Model.CurrentPageURL">
    <meta name="twitter:image" content="@Model.BlogPost.BlogBoxPicturePictureURL">
}

